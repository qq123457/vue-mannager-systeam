# https://editorconfig.org
# 为了保持各个ide格式统一
# vscode 需要安装vscode for editorconfig 插件
root = true

[*] # 表示适用于所有文件
charset = utf-8 # 设置字符集编编码
indent_style = space    # 缩进风格 (tab | space)
indent_size = 2         # 缩进大小
end_of_line = lf        # 控制换行类型 (lf | cr | crlf)
insert_final_newline = true # 始终再文件末尾插入一个新行
trim_trailing_whitespace = true # 取出行首任意空白字符

[*.md] # 表示仅对 md 文件适用
insert_final_newline = false        # 
trim_trailing_whitespace = false    # 
